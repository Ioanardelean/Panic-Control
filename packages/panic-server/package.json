  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverage": true,
    "setupFilesAfterEnv": [
      "<rootDir>/src/test/integration/setupTests.ts"
    ],
    "coverageReporters": [
      "html",
      "json"
    ],
    "testPathIgnorePatterns": [
      "/lib/",
      "/node_modules/"
